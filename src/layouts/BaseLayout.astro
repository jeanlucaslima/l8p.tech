---
import '@fontsource-variable/archivo';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  headerTitle?: string;
  hideHeader?: boolean;
}

const { title, description, headerTitle, hideHeader = false } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || 'L8P - Propostas'} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen w-full max-w-full flex-col bg-[#FAFAFA] font-[Archivo_Variable] text-gray-900 antialiased">
    {!hideHeader && <Header title={headerTitle} />}
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
