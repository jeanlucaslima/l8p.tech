---
import '@fontsource-variable/archivo';
import '../styles/global.css';
import LandingHeader from '../components/LandingHeader.astro';
import LandingFooter from '../components/LandingFooter.astro';
import { t } from '../utils/i18n';
import { ViewTransitions } from 'astro:transitions';

const locale = (Astro.currentLocale || 'pt-BR') as 'pt-BR' | 'en';
const title = t(locale, 'brief.title');
const description = t(locale, 'meta.description');
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Alternate language links -->
    <link rel="alternate" hreflang="pt-BR" href={`${Astro.site || "/"}brief`} />
    <link rel="alternate" hreflang="en" href={`${Astro.site || "/"}en/brief`} />
    <link rel="alternate" hreflang="x-default" href={`${Astro.site || "/"}brief`} />

    <!-- View Transitions -->
    <ViewTransitions />
  </head>
  <body class="brief-body">
    <LandingHeader locale={locale} />
    <main class="brief-main">
      <div class="brief-container">
        <article class="brief-content">
          <h1>{t(locale, 'brief.title')}</h1>

          <section>
            <h2>{t(locale, 'brief.section1_title')}</h2>
            <p>
              {t(locale, 'brief.section1_content')}
            </p>
          </section>

          <section>
            <h2>{t(locale, 'brief.section2_title')}</h2>
            <p>
              {t(locale, 'brief.section2_p1')}
            </p>
            <p>
              {t(locale, 'brief.section2_p2')}
            </p>
          </section>

          <section>
            <h2>{t(locale, 'brief.section3_title')}</h2>
            <p>
              {t(locale, 'brief.section3_intro')}
            </p>
            <ul>
              <li><strong>{t(locale, 'brief.section3_events')}</strong> — {t(locale, 'brief.section3_events_desc')}</li>
              <li><strong>{t(locale, 'brief.section3_research')}</strong> — {t(locale, 'brief.section3_research_desc')}</li>
              <li><strong>{t(locale, 'brief.section3_tools')}</strong> — {t(locale, 'brief.section3_tools_desc')}</li>
            </ul>
          </section>

          <section>
            <h2>{t(locale, 'brief.section4_title')}</h2>
            <p>
              {t(locale, 'brief.section4_p1')}
            </p>
            <p>
              {t(locale, 'brief.section4_p2')}
            </p>
          </section>

          <div class="brief-cta">
            <a href={locale === 'en' ? '/en/' : '/'} class="back-link">{t(locale, 'brief.back_link')}</a>
          </div>
        </article>
      </div>
    </main>
    <LandingFooter locale={locale} />
  </body>
</html>

<style>
  .brief-body {
    background-color: var(--ink);
    color: var(--text);
    font-family: 'Archivo Variable', sans-serif;
    margin: 0;
    padding: 0;
  }

  .brief-main {
    min-height: 100vh;
    min-height: 100dvh;
    padding-top: 60px; /* Header height */
    padding-bottom: 4rem;
  }

  .brief-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .brief-content {
    max-width: 720px;
    margin: 4rem auto 0;
  }

  h1 {
    font-family: 'Archivo Variable', sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 600;
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--text);
    margin: 0 0 3rem 0;
  }

  h2 {
    font-family: 'Archivo Variable', sans-serif;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.01em;
    color: var(--text);
    margin: 3rem 0 1.5rem 0;
  }

  section + section {
    margin-top: 3rem;
  }

  p {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    line-height: 1.6;
    color: var(--muted);
    margin: 0 0 1.5rem 0;
  }

  p:last-child {
    margin-bottom: 0;
  }

  ul {
    margin: 1.5rem 0;
    padding-left: 0;
    list-style: none;
  }

  li {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--muted);
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    position: relative;
  }

  li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--accent);
  }

  strong {
    font-weight: 600;
    color: var(--text);
  }

  .brief-cta {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--line);
  }

  .back-link {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.01em;
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--text);
  }

  .back-link:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
    border-radius: 2px;
    color: var(--text);
  }

  @media (max-width: 640px) {
    .brief-container {
      padding: 0 1rem;
    }

    .brief-content {
      margin-top: 2rem;
    }

    h1 {
      margin-bottom: 2rem;
    }
  }
</style>
