---
import '@fontsource-variable/archivo';
import '../styles/global.css';
import LandingHeader from '../components/LandingHeader.astro';
import LandingHero from '../components/LandingHero.astro';
import LandingRibbon from '../components/LandingRibbon.astro';
import LandingFooter from '../components/LandingFooter.astro';
import { t } from '../utils/i18n';

const locale = (Astro.currentLocale || 'pt-BR') as 'pt-BR' | 'en';
const title = t(locale, 'meta.title');
const description = t(locale, 'meta.description');
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Social Meta -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="L8P" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Alternate language links -->
    <link rel="alternate" hreflang="pt-BR" href={Astro.site || "/"} />
    <link rel="alternate" hreflang="en" href={`${Astro.site || "/"}en/`} />
    <link rel="alternate" hreflang="x-default" href={Astro.site || "/"} />
  </head>
  <body class="landing-body">
    <LandingHeader locale={locale} />
    <main>
      <LandingHero locale={locale} />
    </main>
    <LandingRibbon />
    <LandingFooter locale={locale} />
  </body>
</html>

<style>
  .landing-body {
    background-color: var(--ink);
    color: var(--text);
    font-family: 'Archivo Variable', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  main {
    position: relative;
    z-index: 2;
  }
</style>
