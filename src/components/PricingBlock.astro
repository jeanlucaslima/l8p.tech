---
interface Props {
  price: string;
  description?: string;
  inclusions: string[];
}

const { price, description = "Pacote Completo â€” inclui:", inclusions } = Astro.props;
---

<div class="pricing-block">
  <div class="pricing-header">
    {description && <p class="pricing-description">{description}</p>}
    <div class="pricing-amount">{price}</div>
  </div>
  <ul class="pricing-inclusions">
    {inclusions.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
</div>

<style>
  .pricing-block {
    background: white;
    border: 1px solid var(--color-stroke, #E5E5E5);
    border-radius: 12px;
    padding: 2.5rem;
    margin: 3rem 0;
  }

  .pricing-header {
    margin-bottom: 1.5rem;
  }

  .pricing-description {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text, #1A1A1A);
    margin: 0 0 0.75rem 0;
    opacity: 0.8;
  }

  .pricing-amount {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-text, #1A1A1A);
    line-height: 1.2;
  }

  .pricing-inclusions {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0;
  }

  .pricing-inclusions li {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-text, #1A1A1A);
    margin-bottom: 0.5rem;
  }

  .pricing-inclusions li:last-child {
    margin-bottom: 0;
  }

  @media print {
    .pricing-block {
      border: 1px solid #000;
      page-break-inside: avoid;
    }
  }
</style>
