---
// Hero section with title, language toggle, and navigation buttons
import { t } from '../utils/i18n';

interface Props {
  locale: 'pt-BR' | 'en';
}

const { locale } = Astro.props;
const alternateLocale = locale === 'en' ? 'pt-BR' : 'en';
const alternateUrl = locale === 'en' ? '/' : '/en/';
---

<section class="landing-hero">
  <!-- Dotted Grid Background -->
  <div class="dotted-grid" aria-hidden="true"></div>

  <div class="hero-container">
    <!-- Language Toggle -->
    <div class="language-toggle-wrapper">
      <div class="language-toggle">
        <a
          href="/"
          class={`toggle-option ${locale === 'pt-BR' ? 'active' : ''}`}
          aria-label="PortuguÃªs"
        >
          PT
        </a>
        <a
          href="/en/"
          class={`toggle-option ${locale === 'en' ? 'active' : ''}`}
          aria-label="English"
        >
          EN
        </a>
      </div>
    </div>

    <div class="hero-content" id="hero-content">
      <h1 class="hero-title">{t(locale, 'hero.title')}</h1>

      <!-- Blurb / Description -->
      <p class="hero-blurb">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris.
      </p>

      <!-- Navigation Buttons -->
      <div class="nav-buttons">
        <a href={locale === 'en' ? '/en/labs' : '/labs'} class="nav-button">
          {t(locale, 'nav.lab')}
        </a>
        <a href={locale === 'en' ? '/en/newsletter' : '/newsletter'} class="nav-button">
          {t(locale, 'nav.newsletter')}
        </a>
        <a href={locale === 'en' ? '/en/contact' : '/contact'} class="nav-button">
          {t(locale, 'nav.contact')}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .landing-hero {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0;
    overflow: hidden;
  }

  /* Dotted Grid Background */
  .dotted-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle, rgba(237, 237, 237, 0.25) 1.5px, transparent 1.5px);
    background-size: 45px 45px;
    background-position: 0 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero-container {
    position: relative;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
    z-index: 3;
  }

  /* Language Toggle */
  .language-toggle-wrapper {
    display: flex;
    justify-content: flex-start;
    margin-bottom: 3rem;
  }

  .language-toggle {
    display: inline-flex;
    background: transparent;
    border: 1px solid var(--line);
    border-radius: 12px;
    padding: 4px;
    gap: 4px;
  }

  .toggle-option {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    color: var(--muted);
    background: transparent;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .toggle-option:hover {
    color: var(--text);
  }

  .toggle-option.active {
    color: var(--ink);
    background: var(--text);
  }

  .toggle-option:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  /* Hero Content */
  .hero-content {
    max-width: 720px;
    opacity: 0;
    transform: translateY(12px);
  }

  .hero-title {
    font-family: 'Archivo Variable', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--text);
    margin: 0 0 2rem 0;
    background: var(--ink);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    position: relative;
    z-index: 4;
    max-width: 720px;
    display: block;
  }

  /* Hero Blurb */
  .hero-blurb {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    line-height: 1.6;
    letter-spacing: 0.005em;
    color: var(--muted);
    margin: 0 0 3rem 0;
    max-width: 720px;
    background: var(--ink);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    position: relative;
    z-index: 4;
    display: block;
  }

  /* Navigation Buttons */
  .nav-buttons {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    background: var(--ink);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    position: relative;
    z-index: 4;
    width: fit-content;
  }

  .nav-button {
    font-family: 'Archivo Variable', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    color: var(--text);
    background: transparent;
    border: 1px solid var(--line);
    padding: 0.875rem 2rem;
    border-radius: 14px;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-block;
  }

  .nav-button:hover {
    transform: scale(1.02);
    border-color: var(--accent);
    box-shadow: 0 0 0 1px var(--accent);
  }

  .nav-button:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  @media (max-width: 640px) {
    .hero-container {
      padding: 0 1rem;
    }

    .language-toggle-wrapper {
      margin-bottom: 3rem;
    }

    .hero-title {
      margin: 0 0 1.5rem 0;
      font-size: clamp(2rem, 8vw, 2.5rem);
      padding: 0.875rem 1.25rem;
    }

    .hero-blurb {
      font-size: 1rem;
      margin: 0 0 2.5rem 0;
      padding: 0.875rem 1.25rem;
    }

    .nav-buttons {
      flex-direction: column;
      gap: 1rem;
      padding: 0.875rem 1.25rem;
      width: 100%;
    }

    .nav-button {
      width: 100%;
      text-align: center;
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-content {
      opacity: 1 !important;
      transform: none !important;
    }

    .nav-button:hover {
      transform: none !important;
    }
  }
</style>

<script>
  // Entrance animation - runs on every page load including View Transitions
  async function animateHero() {
    const { animate } = await import('animejs');
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    const heroContent = document.getElementById('hero-content');

    if (heroContent && !prefersReducedMotion) {
      // Fade in and slide up
      animate(heroContent, {
        opacity: [0, 1],
        translateY: [12, 0],
        duration: 200,
        easing: 'cubicBezier(0.4, 0, 0.2, 1)',
        delay: 100
      });
    } else if (heroContent) {
      // Just set opacity if motion is reduced
      heroContent.style.opacity = '1';
      heroContent.style.transform = 'none';
    }
  }

  // Run on initial page load
  animateHero();

  // Run after View Transitions
  document.addEventListener('astro:page-load', animateHero);
</script>
