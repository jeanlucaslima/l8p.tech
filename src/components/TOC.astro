---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filter to only show h2 headings for clean navigation
const tocHeadings = headings.filter((h) => h.depth === 2);
---

{tocHeadings.length > 0 && (
  <nav class="mb-16 print:hidden">
    <div class="mb-4 text-xs font-medium uppercase tracking-wider text-gray-400">
      Nesta pÃ¡gina
    </div>
    <ul class="space-y-2">
      {tocHeadings.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class="block text-sm text-gray-500 transition-colors hover:text-gray-900"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
