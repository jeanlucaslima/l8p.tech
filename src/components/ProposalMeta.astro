---
interface Props {
  client: string;
  date: Date;
  status: 'draft' | 'sent' | 'accepted' | 'archived';
  tags?: string[];
}

const { client, date, status, tags } = Astro.props;

const statusLabels = {
  draft: 'Rascunho',
  sent: 'Enviado',
  accepted: 'Aceito',
  archived: 'Arquivado',
};

const formattedDate = new Date(date).toLocaleDateString('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<!-- Hero metadata: single line, minimal, understated -->
<div class="mb-16 space-y-6 print:mb-8">
  <!-- Single line metadata -->
  <div class="flex flex-wrap items-center gap-x-3 text-sm text-gray-500">
    <span class="font-medium text-gray-900">{client}</span>
    <span class="text-gray-300">·</span>
    <span>{formattedDate}</span>
    <span class="text-gray-300">·</span>
    <span>{statusLabels[status]}</span>
  </div>

  <!-- Tags (if present) -->
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600">
          {tag}
        </span>
      ))}
    </div>
  )}
</div>
