---
interface Props {
  client: string;
  date: Date;
  status: 'draft' | 'sent' | 'accepted' | 'archived';
  tags?: string[];
}

const { client, date, status, tags } = Astro.props;

const statusColors = {
  draft: 'bg-gray-100 text-gray-700',
  sent: 'bg-blue-50 text-blue-700',
  accepted: 'bg-green-50 text-green-700',
  archived: 'bg-gray-50 text-gray-500',
};

const statusLabels = {
  draft: 'Rascunho',
  sent: 'Enviado',
  accepted: 'Aceito',
  archived: 'Arquivado',
};

const formattedDate = new Date(date).toLocaleDateString('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<div class="mb-12 space-y-4 print:mb-6">
  <!-- Inline metadata with icons -->
  <div class="flex flex-wrap items-center gap-x-6 gap-y-3 text-sm text-gray-600">
    <!-- Client -->
    <div class="flex items-center gap-2">
      <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      <span class="font-medium text-gray-900">{client}</span>
    </div>

    <!-- Date -->
    <div class="flex items-center gap-2">
      <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span>{formattedDate}</span>
    </div>

    <!-- Status -->
    <div class="flex items-center gap-2">
      <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class={`rounded px-2 py-0.5 text-xs font-medium ${statusColors[status]}`}>
        {statusLabels[status]}
      </span>
    </div>
  </div>

  <!-- Tags -->
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="inline-flex items-center gap-1.5 rounded-md bg-gray-50 px-2.5 py-1 text-xs font-medium text-gray-600 hover:bg-gray-100">
          <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
          {tag}
        </span>
      ))}
    </div>
  )}

  <!-- Divider -->
  <div class="border-t border-gray-100 pt-8 print:hidden"></div>
</div>
